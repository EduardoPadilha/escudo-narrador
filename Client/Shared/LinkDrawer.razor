@inject NavigationManager Url

<MatListItem Href="@Url.ToAbsoluteUri(string.IsNullOrEmpty(Rota)? "/" : Rota).AbsoluteUri" @onclick="OnClick">
    @Descricao
</MatListItem>

@if (!Ultimo)
{
    <MatListDivider></MatListDivider>
}

@code {
    [Parameter]
    public string Descricao { get; set; }
    [Parameter]
    public string Rota { get; set; }
    [Parameter]
    public Action OnClick { get; set; }
    [Parameter]
    public bool Ultimo { get; set; }
}
