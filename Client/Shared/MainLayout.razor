@inherits LayoutComponentBase

<MatAppBarContainer>
    <MatAppBar Fixed="true">
        <MatAppBarRow>
            <MatAppBarSection>
                <MatIconButton Icon="menu" OnClick="@((e) => ToggleDrawer())"></MatIconButton>
                <MatAppBarTitle>Escudo do Narrador</MatAppBarTitle>
            </MatAppBarSection>
            <MatAppBarSection Align="@MatAppBarSectionAlign.End">
                <MatIconButton Icon="help"></MatIconButton>
            </MatAppBarSection>
        </MatAppBarRow>
    </MatAppBar>

    <MatAppBarContent>
        <MatDrawerContainer Style="width: 100%; height: 100%;">
            <MatDrawer @bind-Opened="@aberto" Mode="@MatDrawerMode.Modal">
                <DrawerLinks FecharDrawer="ToggleDrawer" />
            </MatDrawer>
            <MatDrawerContent>
                @Body
            </MatDrawerContent>
        </MatDrawerContainer>
    </MatAppBarContent>
</MatAppBarContainer>

@code
{
    bool aberto = false;

    void ToggleDrawer()
    {
        aberto = !aberto;
    }
}